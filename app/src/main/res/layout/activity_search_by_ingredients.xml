<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Top -->
    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/bg_actionbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:text="@string/search_by_ingredients"
            android:textColor="#fff"
            android:textSize="@dimen/activity_title_text"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewId"
        android:layout_width="match_parent"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:layout_above="@+id/bottomLayoutId"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topLayout" />

    <LinearLayout
        android:id="@+id/bottomLayoutId"
        android:layout_width="match_parent"
        style='?android:attr/buttonBarStyle'
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/searchButtonId"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_middle_selector"
            android:text="@string/search_button"
            android:textColor="#fff"
            android:textSize="20sp"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>